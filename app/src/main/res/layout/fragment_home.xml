<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.Payway">

    <!-- Action Bar -->
    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="22dp"
        android:background="@color/white">

        <!-- Search icon -->
        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_search"
            android:backgroundTint="#ECE9E9"
            android:background="@drawable/rounded_gray_background"/>

        <!-- Control icon -->
        <ImageView
            android:id="@+id/control_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/control_icon"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="7dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/ic_mac_ctrl"
            android:backgroundTint="#ECE9E9"
            android:background="@drawable/rounded_gray_background"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/hellos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_khalil"
        android:textSize="26sp"
        android:layout_below="@+id/action_bar"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/lets_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lets_gets_somethings"
        android:textSize="18sp"
        android:layout_below="@+id/hellos"
        android:layout_marginStart="16dp"
        />


    <HorizontalScrollView
        android:id="@+id/ads_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lets_get"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/horizental_scrolling"
        android:scrollbars="none">    <!-- Horizontal Scroll View for Menu -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/adscard"
                android:orientation="vertical"

                android:paddingStart="6dp"
                android:paddingTop="6dp"
                android:paddingEnd="0dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/textpersent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_gray_background_card_persent"
                    android:padding="6dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Get Now"
                    android:textColor="@color/orange"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.059"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_name" />

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="119dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="15dp"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="2"
                    android:paddingStart="1dp"
                    android:text="30% OFF DURING WAR ON GAZA"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/textpersent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shopingnew__1_"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/product_name"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/adscardblue"
                android:orientation="vertical"
                android:paddingStart="6dp"
                android:paddingTop="6dp"
                android:paddingEnd="0dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/textpersent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_gray_background_card_persent"
                    android:backgroundTint="#D65CEA"
                    android:padding="6dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Get Now"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.059"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_name2" />

                <TextView
                    android:id="@+id/product_name2"
                    android:layout_width="119dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="15dp"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="2"
                    android:paddingStart="1dp"
                    android:text="30% OFF DURING WAR ON GAZA"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/textpersent2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shopingnew__1_"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/product_name2"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/adscard"
                android:orientation="vertical"
                android:paddingStart="6dp"
                android:paddingTop="6dp"
                android:paddingEnd="0dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/textpersent3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_gray_background_card_persent"
                    android:padding="6dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Get Now"
                    android:textColor="@color/orange"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.059"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_name3" />

                <TextView
                    android:id="@+id/product_name3"
                    android:layout_width="119dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="15dp"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="2"
                    android:paddingStart="1dp"
                    android:text="30% OFF DURING WAR ON GAZA"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/textpersent3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shopingnew__1_"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/product_name3"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </HorizontalScrollView>


    <TextView
        android:id="@+id/top_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ads_menu"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="8dp"
        android:text="@string/top_categories"
        android:textSize="16sp" />

    <HorizontalScrollView
        android:id="@+id/category_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_categories"
        android:contentDescription="@string/horizental_scrolling"
        android:scrollbars="none">
        <!-- Horizontal Scroll View for Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginStart="16dp"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/watch_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:padding="8dp"
                android:background="@drawable/rounded_gray_background">

                <ImageView
                    android:id="@+id/wacthes"
                    android:layout_width="32dp"
                    android:layout_height="31dp"
                    android:src="@drawable/watch_svgrepo_com" />

            </FrameLayout>


            <FrameLayout
                android:id="@+id/T_shorts_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                android:background="@drawable/rounded_gray_background">
                <ImageView
                    android:id="@+id/T_shorts"
                    android:layout_width="32dp"
                    android:layout_height="31dp"
                    android:src="@drawable/short_sleeve_svgrepo_com__1_" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/caps_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                android:background="@drawable/rounded_gray_background">
                <ImageView
                    android:id="@+id/caps"
                    android:layout_width="32dp"
                    android:layout_height="31dp"
                    android:src="@drawable/cap_svgrepo_com"

                    />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/jacket_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                android:background="@drawable/rounded_gray_background">
                <ImageView
                    android:id="@+id/jacket"
                    android:layout_width="32dp"
                    android:layout_height="31dp"
                    android:src="@drawable/jacket_illustration_2_svgrepo_com"

                    />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/backpack_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                android:background="@drawable/rounded_gray_background"
                tools:ignore="ExtraText">
                <ImageView
                    android:id="@+id/backpack"
                    android:layout_width="32dp"
                    android:layout_height="31dp"
                    android:src="@drawable/backpack_bag_holidays_svgrepo_com"

                    />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/shoas_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                android:background="@drawable/rounded_gray_background"
                tools:ignore="ExtraText">
                <ImageView
                    android:id="@+id/shoas"
                    android:layout_width="32dp"
                    android:layout_height="31dp"
                    android:src="@drawable/shoe_store_svgrepo_com"

                    />

            </FrameLayout>


            <FrameLayout
                android:id="@+id/shorts_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                android:background="@drawable/rounded_gray_background"
                tools:ignore="ExtraText">

                <ImageView
                    android:id="@+id/shorts"
                    android:layout_width="32dp"
                    android:layout_height="31dp"
                    android:src="@drawable/short_jeans_clothing_wear_cloth_fashion_svgrepo_com"
                    />


            </FrameLayout>

        </LinearLayout>
    </HorizontalScrollView>
    <!-- Vertical Scroll View for Products -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_menu"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:clipToPadding="false"
        android:scrollbars="none" />



</RelativeLayout>