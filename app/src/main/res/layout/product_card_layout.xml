<?xml version="1.0" encoding="utf-8"?>
<!-- Define your layout for the product card -->
<!-- Include TextViews, ImageViews, or other views to display product information -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/product_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name" />

    <TextView
        android:id="@+id/product_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Price" />

    <!-- Include other views for displaying additional product details (image, description, etc.) -->
</LinearLayout>
